<Page
    x:Class="Equationator.LessonsNav"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Equationator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#8ABCD7">

    <Grid>
        <Grid>
            <!-- Your LessonsPage content goes here -->

            <!-- NavigationView for tabbed navigation -->
            <NavigationView x:Name="navigationView" ItemInvoked="OnNavigationViewItemInvoked" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" PaneDisplayMode="Top" Loaded="OnNavigationViewLoaded" IsSettingsVisible="False" IsBackButtonVisible="Collapsed">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Physics" Tag="Physics" Foreground="#8ABCD7"/>
                    <NavigationViewItem Content="Maths" Tag="Maths" Foreground="#8ABCD7"/>
                    <NavigationViewItem Content="Astrophysics" Tag="Astrophysics" Foreground="#8ABCD7"/>
                </NavigationView.MenuItems>
            </NavigationView>
        </Grid>
    </Grid>
</Page>
